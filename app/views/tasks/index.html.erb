<h1>Listing tasks</h1>
<h2>Not finished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hour</th>
      <th>Initialdate</th>
      <th>Finaldate</th>
      <th>User</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished == false%>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.hour %></td>
        <td><%= task.initialdate %></td>
        <td><%= task.finaldate %></td>
        <td><%= task.user.fullname %></td>
        <td><%= task.finished %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
<h2>finished</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Hour</th>
      <th>Initialdate</th>
      <th>Finaldate</th>
      <th>User</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <%if task.finished == true%>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.hour %></td>
        <td><%= task.initialdate %></td>
        <td><%= task.finaldate %></td>
        <td><%= task.user.fullname %></td>
        <td><%= task.finished %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


